<!DOCTYPE html>
<html>
<head>
  <title>Edit Article</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Edit Article</h1>

  <% 
    const slug = `${article.date}-${article.title.toLowerCase().replace(/[^a-z0-9]+/g, '-')}`;
  %>

  <form method="POST" action="/admin/edit/<%= slug %>">
    <label>Title: <input type="text" name="title" value="<%= article.title %>"></label><br>
    <label>Date: <input type="date" name="date" value="<%= article.date %>"></label><br>
    <label>Content:<br><textarea name="content" rows="10" cols="50"><%= article.content %></textarea></label><br>
    <button type="submit">Save Changes</button>
  </form>
</body>
</html>